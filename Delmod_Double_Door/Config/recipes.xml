<delmod>
	<append xpath="/recipes">

	<!--- Must be able to craft the door  -->
	<recipe name="Double Door" count="1" craft_area="workbench">
		<ingredient name="resourceWood" count="20"/>
		<ingredient name="resourceSpring" count="4"/>
		<ingredient name="resourceMechanicalParts" count="17"/>
		<ingredient name="resourceForgedIron" count="1"/>	
	</recipe>

	<!--- Must be able to craft bars to attach door to  -->
	<recipe name="Big Double Door" count="1" craft_area="workbench">
		<ingredient name="resourceWood" count="40"/>
		<ingredient name="resourceSpring" count="8"/>
		<ingredient name="resourceMechanicalParts" count="4"/>
		<ingredient name="resourceForgedIron" count="2"/>	
	</recipe>
	
	</append>
</delmod>

